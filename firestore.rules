rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Contact form submissions: anyone can create, only authenticated admin can read
    match /contact-submissions/{submission} {
      allow create: if request.resource.data.keys().hasAll(['name', 'email', 'subject', 'message'])
                    && request.resource.data.name is string
                    && request.resource.data.email is string
                    && request.resource.data.message is string
                    && request.resource.data.name.size() >= 2
                    && request.resource.data.message.size() >= 20;
      allow read, update, delete: if request.auth != null;
    }
  }
}
